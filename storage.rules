rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files.
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only to the 'feedback' directory for authenticated users.
    // This is a basic rule; in a production app, you'd want more specific user-based security.
    match /feedback/{noteId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
