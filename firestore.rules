rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to a 'public' collection
    match /public/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow logged-in users to read and write to their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read and write access to candidates and roles for any user
    // This is for demonstration purposes and should be secured in a production app
    match /candidates/{candidateId} {
      allow read, write: if true;
    }

    match /roles/{roleId} {
      allow read, write: if true;
    }
    
    match /notifications/{notificationId} {
      allow read, write: if true;
    }

    // Allow any user to read, write, update, and delete feedback notes.
    // In a real app, you would restrict this to authenticated users.
    match /feedback/{noteId} {
      allow read, create, update, delete: if true;
    }
  }
}
