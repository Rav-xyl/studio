rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are permissive and are not suitable for production.
    // They allow anyone to read and write to your database.
    // For a production app, you should implement proper authentication.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
